<!DOCTYPE html>
<html lang="en">
<%- include('includes/head') %>

    <body>
        <%- include('includes/header') %>
            <main class="centered-page">
                <h2>Login</h2>
                <% if (inputData.errorMessage) { %>
                    <section class="alert">
                        <h2>Invalid Input</h2>
                        <p><%= inputData.errorMessage %></p>
                    </section>
                <% } %>
                <form id="login-form" class="full-form" action="/login" method="post">
                    <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
                    <section>
                        <label for="email">E-mail</label>
                        <input id="email" name="email" type="email" value="<%= inputData.email %>" placeholder="example@example.com">
                        <label for="password">Password</label>
                        <input id="password" name="password" type="password" value="<%= inputData.password %>" placeholder="password">
                    </section>
                    <section>
                        <button class="btn btn-main" type="submit">Login</button>
                        <button class="btn btn-optional">Create a new user</button>
                    </section>
                </form>
            </main>
    </body>

</html>